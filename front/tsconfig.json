{
  "extends": ["@tsconfig/svelte/tsconfig.json", "../tsconfig.base.json"],
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,

    "checkJs": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowArbitraryExtensions": true,
    "types": ["@testing-library/jest-dom"] // Utile pour rendre les types disponible dans l'IDE
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
