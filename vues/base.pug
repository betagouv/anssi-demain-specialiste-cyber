html(lang = 'fr', xml:lang = 'fr', xmlns = 'http://www.w3.org/1999/xhtml')
  meta(charset='utf-8')
  meta(name = 'viewport', content = 'width=device-width')
  each taille in [16, 24, 48, 96, 144]
    link(rel="icon" href=`/assets/favicon/favicon_${taille}.png` sizes=`${taille}x${taille}` type="image/png")
  block styles
    link(href='/assets/styles/fonts.css', rel='stylesheet')
    link(href='/assets/styles/site.css', rel='stylesheet')
    link(href='/assets/styles/footer.css', rel='stylesheet')
    link(href='/assets/styles/footer.tablette.css', rel='stylesheet')
    link(href='/assets/styles/footer.desktop.css', rel='stylesheet')
  block script
    script(type='text/javascript' src='/assets/librairies/jquery-3.7.1.min.js')
    script(type='text/javascript' src='/assets/scripts/nav-principale.js')

