extends base
include kit/nav-principale
include kit/nav-fil-ariane

block title
  title Espace enseignant | DemainSpécialisteCyber

block append styles
  link(href='/assets/styles/espace-enseignant/espace-enseignant.css', rel='stylesheet')
  link(href='/assets/styles/espace-enseignant/espace-enseignant.tablette.css', rel='stylesheet')
  link(href='/assets/styles/espace-enseignant/espace-enseignant.desktop.css', rel='stylesheet')

block body
  +navPrincipale()
  +navFilAriane('Espace enseignant')

  #titre
    h2 Vous êtes enseignant·e ?
    h4 Ou vous travaillez au sein du ministère de l’éducation nationale et de la jeunesse ?

  .chapitres
    each chapitre in ressources
      .chapitre
        h3 #{chapitre.titre}
        if chapitre.accroche
          .accroche #{chapitre.accroche}
        .ressources
          each r in chapitre.ressources
            .ressource
              .nom #{r.nom}
              if r.details
                .detail #{r.details}
              a.fichier(href=r.url class=r.classe) #{r.fichier}

  .formations
    .formation
      h3 Formez-vous à la cyber
      .ressources
        each f in formations
          .ressource
            .nom #{f.nom}
            if f.details
              .detail #{f.details}
            a.fichier(href=f.url class=f.classe) #{f.fichier}

  .gap