block append styles
  style.
    nav.principale {
      display: flex;
      justify-content: space-between;
      padding: 12px 16px 0 16px;
    }

    #burger {
      width: 24px;
      height: 24px;
      cursor: pointer;
    }

    #menu-burger {
      position: fixed;
      top: 0;
      left: 100vw;
      background: var(--noir);
      height: 100vh;
      width: calc(100vw - 32px);
      z-index: 10;
      transition: left 0.2s ease-in-out;
      display: flex;
      flex-direction: column;
      padding: 16px;
    }

    #menu-burger.ouvert {
      left: 0;
    }

    #menu-burger img {
      width: 24px;
      height: 24px;
      margin-bottom: 32px;
      margin-left: auto;
      cursor: pointer;
    }

    #menu-burger a {
      padding: 16px 0;
      border-bottom: 1px solid #373a75;
      display: flex;
      justify-content: space-between;
      text-decoration: none;
      color: white;
    }

    #menu-burger a::after {
      content: "";
        display: flex;
        background-image: url("/assets/images/fleche-droite.svg");
        width: 20px;
          height: 20px;
    }

    @media screen and (min-width: 768px) {
      #menu-burger {
        width: calc(100vw - 64px);
        padding: 32px;
      }
    }

    @media screen and (min-width: 1024px) {
      .marianne {
        transform: translateX(-12px);
      }

      nav.principale {
        max-width: 1200px;
        margin: auto;
        padding-top: 12px;
        padding-bottom: 12px;
      }

      #menu-desktop {
        display: flex;
        flex-direction: row;
        align-items: center;
        column-gap: 28px;
      }

      #menu-desktop a {
        text-decoration: none;
        color: var(--noir);
      }

      #menu-desktop #espace-enseignant::before {
        display: inline-block;
        width: 16px;
        height: 16px;
        transform: translateY(2px);
        margin-right: 8px;
        content: "";
        background: url("/assets/images/cahier.svg");
      }

      #menu-desktop #espace-enseignant.-dark::before {
        background: url("/assets/images/cahier-dark.svg");
      }
    }

mixin navPrincipale(estClair = false)
  - const suffixeCouleur = estClair ? '' : '-dark'
  nav.principale
    a(href="/")
      img.marianne(src=`/assets/images/marianne${suffixeCouleur}.svg`)
    .responsive-invisible-desktop#burger
      img(src=`/assets/images/menu-burger${suffixeCouleur}.svg`)
    .responsive-invisible-desktop#menu-burger
      img#fermeture-menu(src='/assets/images/croix-fermeture.svg')
      a(href="/les-metiers") Découvrir les métiers
      a(href="/la-campagne") Zoom sur la campagne
      a(href="/espace-enseignant") Espace enseignant
    .responsive-visible-desktop#menu-desktop
      a(href='les-metiers') Découvrez les métiers
      a(href="/la-campagne") Zoom sur la campagne
      a#espace-enseignant(class=suffixeCouleur href='/espace-enseignant') Espagne enseignant
